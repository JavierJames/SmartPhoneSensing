    <!-- By clicking this button the data stored in db will be shown -->
<!-- 
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF00FF00" />
 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/AnalyzeActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="analyzeData"
            android:text="@string/analyze_activity" />

        <Button
            android:id="@+id/rssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="rssi"
            android:text="@string/rssi" />
    </LinearLayout>

    <!-- This view shows the data stored in the db -->

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/showStoredCoodinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/showStoredCoordinates" />
    </ScrollView>

</LinearLayout>