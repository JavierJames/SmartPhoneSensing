    <TextView
        android:id="@+id/debugView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/debugView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/x_axis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/x_axis" />

        <TextView
            android:id="@+id/y_axis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/y_axis" />

        <TextView
            android:id="@+id/z_axis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/z_axis" />
    </LinearLayout>

    <!-- Sit activity -->


    <!--
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >
        </LinearLayout>

    </LinearLayout>
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        

        <TabHost
            android1:id="@android:id/tabhost"
            android1:layout_width="match_parent"
            android1:layout_height="match_parent"
            android1:layout_weight="1" >

            <LinearLayout
                android1:layout_width="match_parent"
                android1:layout_height="match_parent"
                android1:orientation="vertical" >

                <TabWidget
                    android1:id="@android:id/tabs"
                    android1:layout_width="match_parent"
                    android1:layout_height="wrap_content" >
                </TabWidget>

                <FrameLayout
                    android1:id="@android:id/tabcontent"
                    android1:layout_width="match_parent"
                    android1:layout_height="match_parent" >

                    <LinearLayout
                        android1:id="@+id/tab1"
                        android1:layout_width="match_parent"
                        android1:layout_height="match_parent"
                        android1:orientation="vertical" >
                        
                        
                        <Button
                            android:id="@+id/sitButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="trainStillActivity"
                            android:text="@string/stillButton" />
                        
                        
                        <Button
                            android:id="@+id/walkButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="trainWalkActivity"
                            android:text="@string/walkButton" />
                        
                        
                        <Button
                            android:id="@+id/runButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="trainRunActivity"
                            android:text="@string/runButton" />
                        
                    </LinearLayout>

                    <LinearLayout
                        android1:id="@+id/tab2"
                        android1:layout_width="match_parent"
                        android1:layout_height="match_parent" >
                        
                            <Button
                                android:id="@+id/testButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="testActivity"
                                android:text="@string/testButton" />
                        
                    </LinearLayout>

                    <LinearLayout
                        android1:id="@+id/tab3"
                        android1:layout_width="match_parent"
                        android1:layout_height="match_parent" 
                        android1:orientation="vertical" >
                            
                            <Button
                                android:id="@+id/viewTrainData"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:onClick="showTrainRecords"
                                android:text="@string/buttonViewTrainData" />

                        <Button
                            android:id="@+id/resetTrainData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="deleteTrainRecords"
                            android:text="@string/buttonResetTrainData" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="2dip"
                            android:background="#FF00FF00" />

                        <Button
                            android:id="@+id/viewTestData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="showTestRecords"
                            android:text="@string/buttonViewTestData" />

                        <Button
                            android:id="@+id/resetTestData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="deleteTestRecords"
                            android:text="@string/buttonResetTestData" />
</LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>

        
    </LinearLayout>

    <!--
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:orientation="horizontal" >
    -->

    

    <!-- <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF00FF00" />
 -->


    <!-- </LinearLayout> -->
